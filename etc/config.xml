<?xml version="1.0"?>
<!--
/**
 * @category    Katapult
 * @package     Katapult_Payment
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <katapult>
                <active>1</active>
                <instructions>Instruction.</instructions>
                <minimum_amount>300.00</minimum_amount>
                <model>KatapultPaymentFacade</model>
                <title>Katapult</title>
                <currency>USD</currency>
                <is_gateway>1</is_gateway>
                <payment_action>authorize_capture</payment_action>
                <can_use_checkout>1</can_use_checkout>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_refund>1</can_refund>
                <can_void>1</can_void>
                <can_cancel>1</can_cancel>
                <can_refund_partial_per_invoice>1</can_refund_partial_per_invoice>
                <sort_order>1</sort_order>
                <live_public_token backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <live_private_token backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <test_public_token backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <test_private_token backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <js_domain_live>www.katapult.com</js_domain_live>
                <js_domain_test>sandbox.katapult.com</js_domain_test>
            </katapult>
        </payment>
    </default>
</config>
